{
  "manifest_version": 3,
  "name": "Edge Legacy Home",
  "version": "1.0.0",
  "description": "Une page d'accueil moderne, minimaliste et fluide avec l'effet Acrylic.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://ipapi.co/*",
    "https://api.open-meteo.com/*"
  ],
  "icons": {
    "80": "icon.ico"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}